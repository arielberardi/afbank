<div class="container">
  <div class="d-flex justify-content-end my-2">
    <%= link_to new_contact_path, class: 'btn btn-primary btn-lg d-flex align-items-center gap-1',
    data: { turbo_frame: 'modal' } do  %>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"></path>
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"></path>
      </svg>
      <%= t('views.contacts.index.add_contact') %>
    <% end %>
  </div>
  <div class="table-responsive">
    <table class="table table-light table-hover align-middle">
      <thead>
        <tr class="table-success">
          <th><%= t('views.contacts.index.alias') %></th>
          <th><%= t('views.contacts.index.account') %></th>
          <th><%= t('views.contacts.index.full_name') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody id="turbo-contacts-table">
        <% @contacts.each do |contact| %>
          <%= render contact %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
