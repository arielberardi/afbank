<!-- A place with the Account information -->
<div class="container bg-success shadow text-light p-3">
  <div class="row justify-content-between align-items-center">
    <div class="col text-start">
      <h2 class="h2"><%= @account.user.fullname %></h2>
      <p class="h4 fw-bold mt-2"><%= t('views.account.type', type: account_type_i18n(@account.account_type)) %></p>
    </div>
    <div class="col text-end">
      <p class="h2"><%= t('views.account.number', number: @account.id) %></p>
      <p class="h4 fw-bold mt-2">
        <%= t('views.account.show.total', balance: @account.balance, currency: currency_to_symbol(@account.currency)) %>
      </p>
    </div>
  </div>
</div>
<!-- Filter to search for specific transactions -->
<div class="list-group">
  <%= render @account.transactions %>
</div>
