<div class="container bg-success shadow text-light p-3">
  <div class="row justify-content-between align-items-center">
    <div class="col text-start">
      <h2 class="h2"><%= @account.user.fullname %></h2>
      <p class="h4 fw-bold mt-2">
        <%= t('views.account.type',
              type: t("activerecord.attributes.account.type.#{@account.account_type.downcase}")
            ) %>
      </p>
    </div>
    <div class="col text-end">
      <p class="h2"><%= t('views.account.number', number: @account.id) %></p>
      <p class="h4 fw-bold mt-2">
        <%= t('views.account.show.total', balance: money_with_currency(@account.balance, @account.currency)) %>
      </p>
    </div>
  </div>
</div>
<div class="list-group">
  <%= render @account.transactions %>
</div>
