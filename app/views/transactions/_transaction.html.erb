<%= link_to transaction, id: dom_id(transaction), data: { turbo_frame: 'modal' },
                         class: 'list-group-item list-group-item-action container' do %>
  <div class="row">
    <div class="col-4">
      <p class="lh-1 h3"><%= transaction.recipient %></p>
      <small class="text-muted"><%= transaction.created_at.strftime("%a %b %Y - %H:%M") %></small>
    </div>
    <div class="col d-flex mt-2 justify-content-center">
      <p class="text-muted text-center">
        <%= t("activerecord.attributes.transaction.status.#{transaction.status}") %>
      </p>
    </div>
    <div class="col-4 d-flex justify-content-end">
      <p class="h2"><%= "#{transaction.amount} #{currency_to_symbol(transaction.sender.currency)}" %></p>
    </div>
  </div>
<% end %>
