<%= turbo_stream_from 'transfers' %>
<div class="container text-end">
  <%= link_to new_transfer_path, class: 'btn btn-primary btn-lg',
                               data: { turbo_frame: 'modal', test_id: 'new-transfer' } do  %>
    <div class="d-flex align-items-center gap-1">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"></path>
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"></path>
      </svg>
      <%= t('views.transfer.index.new_transfer') %>
    </div>
  <% end %>
</div>
<div class="list-group mt-2">
  <% if @transfers.empty? %>
    <h1 class="text-center">You don't have any transfer</h1>
  <% else %>
    <%= turbo_frame_tag 'transfers' do %>
      <%= render @transfers %>
    <% end %>
  <% end %>
</div>
