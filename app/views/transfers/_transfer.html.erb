<%= link_to transfer, id: dom_id(transfer), data: { turbo_frame: 'modal' },
                         class: 'list-group-item list-group-item-action container border-2' do %>
  <div class="row">
    <div class="col-4">
      <p class="lh-1 h3"><%= transfer.recipient.user.fullname %></p>
      <small class="text-muted"><%= transfer.created_at.strftime("%a %b %Y - %H:%M") %></small>
    </div>
    <div class="col d-flex mt-2 justify-content-center">
      <p class="text-muted text-center">
        <%= t("activerecord.attributes.transfer.status.#{transfer.status}") %>
      </p>
    </div>
    <div class="col-4 d-flex justify-content-end">
      <p class="h2"><%= money_with_currency(transfer.amount, transfer.sender.currency) %></p>
    </div>
  </div>
<% end %>
